<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_account_invoice_real_form" model="ir.ui.view">
        <field name="name">report_account_invoice_real_form</field>
        <field name="model">account.move</field>
        <field name="priority">1000</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="tons_display" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="after">
                <field
                    name="tons_display"
                    optional="hide"
                    string="Tons"
                    column_invisible="parent.move_type in ['in_invoice', 'in_refund']"
                />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/kanban/field[@name='quantity']" position="after">
                <field name="tons_display" string="Tons" invisible="parent.move_type in ['in_invoice', 'in_refund']" />
            </xpath>
            <xpath
                expr="//field[@name='invoice_line_ids']/kanban/templates/t/div/t/div/div[2]/div[1]"
                position="after"
            >
                <div class="text-muted" invisible="parent.move_type in ['in_invoice', 'in_refund']">
                    Tons:
                    <t t-esc="record.tons_display.value" />
                </div>
            </xpath>
            <xpath
                expr="//field[@name='invoice_line_ids']/form/sheet/group[1]/field[@name='quantity']"
                position="after"
            >
                <field name="tons_display" string="Tons" invisible="parent.move_type in ['in_invoice', 'in_refund']" />
            </xpath>
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="tons_display" string="Tons" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_out_invoice_tree">
        <field name="name">account_move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_signed']" position="after">
                <field name="tons_display" string="Tons" optional="show" />
            </xpath>
        </field>
    </record>
        <record id="account_move_provider" model="ir.ui.view">
        <field name="name">account.move.provider</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="report_account_invoice_real.report_account_invoice_real_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tons_display']" position="after">
                    <field name="previous_folio" />
            </xpath>
        </field>
    </record>
</odoo>
