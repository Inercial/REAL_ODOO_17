<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template
        id="report_account_invoice_vendor_credit_note_1"
        inherit_id="report_account_invoice_real.report_account_invoice_vendor_base"
        primary="True"
    />

    <template
        id="report_account_invoice_vendor_credit_note_2"
        inherit_id="report_account_invoice_real.report_account_invoice_vendor_credit_note_1"
        priority="1000"
    >
        <xpath expr="//div[@name='title']" position="replace">
            <div name="title" class="text-center">
                <strong class="text-decoration-underline" style="font-size:28px">NOTA DE CREDITO</strong>
                <div class="text-end">
                    <strong style="font-size:20px"><t t-esc="o.name" /></strong>
                </div>
            </div>
        </xpath>
    </template>

    <template id="report_account_invoice_vendor_credit_note_real">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang" />
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-if="not company">
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                <t t-call="web.external_layout_boxed">
                    <t t-call="report_account_invoice_real.report_account_invoice_vendor_credit_note_2" />
                </t>
            </t>
        </t>
    </template>
</odoo>
