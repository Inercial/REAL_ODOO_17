<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template
        id="report_account_invoice_purchase_journal_1"
        inherit_id="report_account_invoice_real.report_account_invoice_journal_base"
        primary="True"
    />

    <template
        id="report_account_invoice_purchase_journal_2"
        inherit_id="report_account_invoice_real.report_account_invoice_purchase_journal_1"
        priority="1000"
    >
        <xpath expr="//div[@name='title']" position="replace">
            <div name="title" class="text-center">
                <strong class="text-decoration-underline" style="font-size:28px">DIARIO DE COMPRAS</strong>
            </div>
        </xpath>

        <xpath expr="//th[@name='th_user']" position="replace">
            <th name="th_user" class="text-center">PROVEEDOR</th>
        </xpath>

    </template>

    <template id="report_account_invoice_purchase_journal_real">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-call="report_account_invoice_real.report_account_invoice_purchase_journal_2" />
            </t>
        </t>
    </template>
</odoo>
