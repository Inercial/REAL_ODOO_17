<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_invoice_poliza_real_1">
        <div class="page">
            <div name="title" class="text-start mb-2">
                <strong style="font-size:28px"><t t-esc="o.name" /></strong><br />
                <span>Fecha:</span><br />
                <span t-esc="o.invoice_date" />
            </div>

            <div name="table_info">
                <table class="table"> <thead>
                        <tr>
                            <th class="text-start">CUENTA</th>
                            <th class="text-start">CONTACTO</th>
                            <th class="text-start">DESCRIPCIÃ“N</th>
                            <th class="text-start">DEBE</th>
                            <th class="text-start">HABER</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-foreach="o.line_ids" t-as="line">
                            <tr>
                                <td>
                                    <span t-esc="line.account_id.code" /> <span t-esc="line.account_id.name" />
                                </td>
                                <td>
                                    <span t-esc="line.partner_id.name" />
                                </td>
                                <td>
                                    <span t-esc="line.name" />
                                </td>
                                <td class="text-center">
                                    <span
                                        t-esc="line.debit"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                                <td class="text-center">
                                    <span
                                        t-esc="line.credit"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </template>

    <template id="report_invoice_poliza_real_2">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang" />
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-if="not company">
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                <t t-call="web.external_layout_boxed">
                    <t t-call="report_account_invoice_real.report_invoice_poliza_real_1" />
                </t>
            </t>
        </t>
    </template>

    <template id="report_invoice_poliza_real">
        <t t-call="report_account_invoice_real.report_invoice_poliza_real_2" />
    </template>
</odoo>
