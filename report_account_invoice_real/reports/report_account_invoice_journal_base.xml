<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_account_invoice_journal_base">
        <div class="page" style="font-size:16px;">
            <div name="title" class="text-center">
                <strong class="text-decoration-underline" style="font-size:28px">DEFAULT</strong>
            </div>

            <div name="table_info">
                <table class="table table-vertical-lines"> <thead>
                        <tr>
                            <th class="text-center">FECHA</th>
                            <th class="text-center">FOLIO</th>
                            <th name="th_user" class="text-center">USER</th>
                            <th class="text-center">SUBTOTAL</th>
                            <th class="text-center">IVA</th>
                            <th class="text-center">TOTAL</th>
                            <th class="text-center">ESTADO</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-foreach="docs" t-as="o">
                            <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang" />
                            <t t-set="o" t-value="o.with_context(lang=lang)" />
                            <tr>
                                <td class="text-center">
                                    <span t-esc="o.invoice_date" t-options='{"widget": "date"}' />
                                </td>
                                <td class="text-center">
                                    <span t-esc="o.name" />
                                </td>
                                <td name="td_user">
                                    <span t-esc="o.partner_id.name" />
                                </td>
                                <td class="text-right">
                                    <span
                                        t-esc="o.amount_untaxed"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                                <td class="text-right">
                                    <span
                                        t-esc="o.amount_tax"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                                <td class="text-right">
                                    <span
                                        t-esc="o.amount_total"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                                <td class="text-right">
                                    <span t-field="o.state" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </template>

    </odoo>
