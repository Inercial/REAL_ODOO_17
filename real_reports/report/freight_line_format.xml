<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="freight_line_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table style="width: 100%; border: none;" border="0">
                        <th style="font-size: 30px" scope="row">
                            <b>Maniobras Incluidas en Precio</b>
                        </th>
                        <th style="text-align: right;" scope="row">
                            <b style="font-size: 30px">L-009</b><br /><t>Revision: 11/03/2024</t>
                        </th>
                    </table>
                    <div style="font-size: 12px;">
                        <div style="font-weight: bold;">
                            fecha inicial: <t t-esc="date_start" />
                        </div>
                        <div style="font-weight: bold;">
                            fecha final: <t t-esc="date_end" />
                        </div>
                    </div>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>NOMBRE</th>
                                <th>TOTAL MANIOBRAS INCLUIDAS EN PRECIO</th>
                            </tr>
                        </thead>
                        <t t-foreach="lines" t-as="line">
                            <tr>
                                <t t-if="line[0] == 'TOTAL'">
                                    <td style="font-weight: bold; text-align: right;"><t t-esc="line[0]" />:</td>
                                    <td style="font-weight: bold;">$<span t-esc="'{0:,.0f}'.format(line[1])" /></td>
                                </t>
                                <t t-else="">
                                    <td><t t-esc="line[0]" /></td>
                                    <td>$<span t-esc="'{0:,.0f}'.format(line[1])" /></td>
                                </t>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
