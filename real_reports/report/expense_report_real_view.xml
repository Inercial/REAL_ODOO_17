<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- PIVOT VIEWS -->

    <record id="view_account_expense_report" model="ir.ui.view">
         <field name="name">expense.report.real.pivot</field>
         <field name="model">expense.report.real</field>
         <field name="arch" type="xml">
             <pivot string="Expense Report">
                <field name="journal_id" type="row" />
                <field name="debit" type="measure" />
                <field name="credit" type="measure" />
                <field name="balance" type="measure" />
             </pivot>
         </field>
    </record>

    <!-- TREE VIEWS -->

    <record model="ir.ui.view" id="account_expense_real_tree">
        <field name="name">expense.report.real.tree</field>
        <field name="model">expense.report.real</field>
        <field name="arch" type="xml">
            <tree>
                <field name="journal_id" />
                <field name="date" optional="show" />
                <field name="account_id" optional="hide" />
                <field name="name" optional="show" />
                <field name="ref" optional="show" />
                <field name="debit" sum="Debit" />
                <field name="credit" sum="Credit" />
                <field name="balance" sum="Balance" />
            </tree>
        </field>
    </record>

    <record id="view_account_expense_real_search" model="ir.ui.view">
        <field name="name">expense.report.real.search</field>
        <field name="model">expense.report.real</field>
        <field name="arch" type="xml">
            <search>
                <field name="journal_id" />
                <filter string="Journal" name="group_by_journal" context="{'group_by':'journal_id'}" />
            </search>
        </field>
    </record>

    <!-- ACTIONS -->

    <record id="action_account_expense_report_real" model="ir.actions.act_window">
        <field name="name">Expense Report</field>
        <field name="res_model">expense.report.real</field>
        <field name="view_mode">pivot,tree</field>
        <field name="context">{
            'search_default_group_by_journal': 1,
        }</field>
    </record>
</odoo>
