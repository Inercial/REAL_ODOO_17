<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="freight_line_report_view">
        <field name="name">freight_line_report_view.form</field>
        <field name="model">freight.line.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_start" required="1" />
                            <field name="date_end" required="1" />
                        </group>
                        <button name="action_print_report" string="PDF" type="object" class="oe_highlight" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_freight_line_report_template" model="ir.actions.report">
        <field name="name">Maniobras Incluidas en Precio</field>
        <field name="model">freight.line.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real_reports.freight_line_template</field>
        <field name="report_file">real_reports.freight_line_template</field>
        <field name="binding_model_id" ref="model_freight_line_report" />
    </record>
</odoo>
