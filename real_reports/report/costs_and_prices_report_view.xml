<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="costs_and_prices_report_view">
        <field name="name">costs_and_prices_report_view.form</field>
        <field name="model">costs.and.prices.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_start" required="1" />
                            <field name="date_end" required="1" />
                        </group>
                        <button name="action_print_report" string="PDF" type="object" class="oe_highlight" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="costs_and_prices_report_template" model="ir.actions.report">
        <field name="name">Costos y Precios por Lineas</field>
        <field name="model">costs.and.prices.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real_reports.costs_and_prices_template</field>
        <field name="report_file">real_reports.costs_and_prices_template</field>
        <field name="binding_model_id" ref="model_costs_and_prices_report" />
    </record>
</odoo>
