<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_delivery_document_real_1_c">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o._get_report_lang())" />
            <t t-set="partner" t-value="o.partner_id or (o.move_ids and o.move_ids[0].partner_id) or False"/>
            <div class="page">
                <div class="text-center" style="color:black;">
                    <h2><span>CFDI DE TRASLADO</span></h2>
                </div>
                <div class="text-end" style="color: black;">
                    <h2><span t-field="o.name">WH/OUT/0001</span></h2>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <strong>Folio de pedido:</strong>
                        <p t-field="o.origin" class="m-0">S0001</p>
                    </div>
                    <div class="col-auto">
                        <strong>Via de embarque:</strong>
                        <p t-field="o.way_of_shipment_id" class="m-0"></p>
                    </div>
                    <div class="col-auto">
                        <strong>Fecha de embarque:</strong>
                            <p t-field="o.scheduled_date" class="m-0"/>
                    </div>
                    <div class="col-auto">
                        <strong>Peso:</strong>
                        <p class="m-0">
                            <span t-field="o.weight" t-options='{"widget": "float", "precision": 1}'/>
                            
                            <span t-field="o.weight_uom_name"/>
                        </p>
                    </div>
                </div>
                <table class="table table-sm mt-3" name="stock_move_table">
                    <thead>
                        <tr>
                                <th><span>CODIGO</span></th>
                                <th><span>UNIDAD</span></th>
                                <th><span>PESO</span></th>
                                <th><span>DESCRIPCION</span></th>
                                <th><span>UNIDAD</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_ids.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td class="text-center">
                                    <span t-field="move.product_id.unspsc_code_id.code"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="move.product_id.uom_id.unspsc_code_id.code"/>
                                </td>
                                <td class="text-center">
                                    <t t-set="total_weight" t-value="move.product_id.weight * move.quantity"/>
                                    <span t-esc="total_weight"/><span t-field="move.product_id.weight_uom_name"/>
                                </td>
                                <td>
                                    <span t-field="move.product_id"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="move.quantity"/> <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row" style="page-break-inside: avoid;">
                    <t t-set="invoice" t-value="o.sale_id.invoice_ids.filtered(lambda inv: inv.state == 'posted')[:1]" />
                    <t t-if="invoice">
                        <t t-set="cfdi_vals" t-value="invoice._l10n_mx_edi_get_extra_invoice_report_values()" />
                        <div class="barcode col-3">
                            <img alt="Barcode" t-att-src="cfdi_vals.get('barcode_src')" />
                        </div>

                        <div class="col-9" style="font-size:0.50rem;">
                            <div>
                                <div class="text-center" style="background-color: #878686; color:white;">
                                    <strong>Sello Digital del emisor</strong><br />
                                </div>
                                <span t-esc="cfdi_vals.get('sello', cfdi_vals.get('Sello', 'No identificado'))" />
                            </div>
                            <div>
                                <div class="text-center" style="background-color: #878686; color:white;">
                                    <strong>Sello digital SAT</strong>
                                </div>
                                <span t-esc="cfdi_vals.get('sello_sat', cfdi_vals.get('sello_sat', 'No identificado'))" />
                            </div>
                            <div>
                                <div class="text-center" style="background-color: #878686; color:white;">
                                    <strong>Cadena Original del complemento de certificación del SAT</strong><br />
                                </div>
                                <span t-if="cfdi_vals.get('cadena')" t-esc="cfdi_vals.get('cadena')" />
                            </div>
                            <div>
                                <div class="text-center" style="background-color: #878686; color:white;">
                                    <strong>Información Extra</strong><br />
                                </div>
                                <span>Certificado del emisor: <t t-esc="cfdi_vals.get('certificate_number')" /></span>
                                <span>| Certificado del SAT: <t t-esc="cfdi_vals.get('certificate_sat_number')" /></span>
                                <span>| Lugar de expedición<t t-esc="cfdi_vals.get('expedition')" /></span>
                                <span>| Régimen Fiscal <t t-esc="cfdi_vals.get('fiscal_regime')" /></span>
                                <span>| Fecha de emisión: <t t-esc="cfdi_vals.get('emission_date_str')" /></span>
                                <span>| Fecha de certificación: <t t-esc="cfdi_vals.get('stamp_date')" /></span>
                                <span>| Folio Fiscal <t t-esc="cfdi_vals.get('uuid')" /></span>
                            </div>
                            <div class="text-center">
                                <strong>Este documento es una representación impresa de un CFDI</strong>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <template id="report_delivery_document_real_c">
        <t t-foreach="docs" t-as="o">
            <t t-call="report_stock_picking_real.report_delivery_document_real_1_c" t-lang="o._get_report_lang()"/>
        </t>
    </template>

    <record id="action_report_delivery_document_real" model="ir.actions.report">
        <field name="name">CFDI traslado Real</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">report_stock_picking_real.report_delivery_document_real_c</field>
        <field name="report_file">report_stock_picking_real.report_delivery_document_real_c</field>
        <field name="binding_model_id" ref="stock.model_stock_picking" />
        <field name="binding_type">report</field>
    </record>
</odoo>