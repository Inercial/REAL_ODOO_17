<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_stock_picking_real_form" model="ir.ui.view">
        <field name="name">report_stock_picking_real_form</field>
        <field name="model">stock.picking</field>
        <field name="priority">10000</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']"
                position="after"
            >
                <field name="tons_display" optional="show" />
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="tons_display" string="Tons" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="stock_picking_tree">
        <field name="name">stock_picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="before">
                <field name="tons_display" />
            </xpath>
            <xpath expr="//field[@name='origin']" position="before">
                <field name="note" />
            </xpath>
        </field>
    </record>
</odoo>
