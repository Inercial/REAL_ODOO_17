<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_stock_move_line_detailed_operation_tree_real" model="ir.ui.view">
        <field name="name">view_stock_move_line_detailed_operation_tree_real</field>
        <field name="model">stock.move.line</field>
        <field name="priority">10000</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="before">
                <field name="tons_display" optional="hide" />
            </xpath>
        </field>
    </record>
    <record id="view_stock_move_line_kanban_real" model="ir.ui.view">
        <field name="name">view_stock_move_line_kanban_real</field>
        <field name="model">stock.move.line</field>
        <field name="priority">10000</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('col-6')][1]/field[@name='product_uom_id']" position="after">
                <br /><span>Tons <field name="tons_display" /></span>
            </xpath>
        </field>
    </record>
    <record id="view_move_line_form_real" model="ir.ui.view">
        <field name="name">view_move_line_form_real</field>
        <field name="model">stock.move.line</field>
        <field name="priority">10000</field>
        <field name="inherit_id" ref="stock.view_move_line_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="before">
                <field name="tons_display" />
            </xpath>
        </field>
    </record>
</odoo>
