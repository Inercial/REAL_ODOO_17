<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mrp_production_overflow_form" model="ir.ui.view">
        <field name="name">Create overflow</field>
        <field name="model">mrp.production.overflow</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <p>
                        It is processing more than 10 units originally scheduled.
                        <p style="font-weight: bold;">
                            Are you sure you want to proceed with this operation?
                        </p>
                    </p>
                </group>
                <footer>
                    <button name="action_overflow" string="Yes" colspan="1" type="object" class="btn-primary" />
                    <button string="No" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mrp_production_overflow" model="ir.actions.act_window">
        <field name="name">You produced more than initial demand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production.overflow</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
