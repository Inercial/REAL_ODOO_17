<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mrp_production_overflow_form" model="ir.ui.view">
        <field name="name">Create Overflow</field>
        <field name="model">mrp.production.overflow</field>
        <field name="arch" type="xml">
            <form string="Confirm Overflow">
                <sheet>
                    <div class="alert alert-warning" role="alert"> You are about to process <b>more
                        than 10 units</b> than originally scheduled. <br /> Do you want to continue
                        with this operation? </div>
                </sheet>

                <footer>
                    <button
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                    />
                    <button
                        name="action_overflow"
                        string="Yes, continue"
                        type="object"
                        class="btn-primary"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mrp_production_overflow" model="ir.actions.act_window">
        <field name="name">You produced more than initial demand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production.overflow</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
