<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="way_of_shipment_type_real_tree" model="ir.ui.view">
        <field name="name">way.of.shipment.type.real.tree</field>
        <field name="model">way.of.shipment.type</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1">
                <field name="name" />
                <field name="days_to_delivery" />
            </tree>
        </field>
    </record>

    <record id="action_way_of_shipment_type" model="ir.actions.act_window">
        <field name="name">Way Of Shipment.type</field>
        <field name="res_model">way.of.shipment.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="way_of_shipment_type_real_tree_form" model="ir.ui.view">
        <field name="name">way.of.shipment.type.form</field>
        <field name="model">way.of.shipment.type</field>
        <field name="arch" type="xml">
            <form string="Way Of Shipment Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="days_to_delivery" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem
        id="way_of_shipment_type_menu"
        name="Way Of Shipment Type"
        parent="contacts.res_partner_menu_config"
        action="action_way_of_shipment_type"
        sequence="2"
    />

</odoo>
