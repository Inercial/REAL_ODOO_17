<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="real_product_product_term" model="ir.ui.view">
        <field name="name">real.product.product.form</field>
        <field name="model">product.product</field>
        <field eval="1" name="priority" />
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="freight_weight" />
            </xpath>
            <xpath expr="//field[@name='unspsc_code_id']" position="after">
                <field name="driver_commission" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_product_tree">
        <field name="name">product_product.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.view_stock_product_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='virtual_available']" position="after">
                <field name="tons_display" string="Tons" sum="Tons" />
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="parent_category_id" string="Categoria madre" />
            </xpath>
        </field>
    </record>
    <record id="mrp_product_product_search_view_inherit" model="ir.ui.view">
        <field name="name">mrp.product.product.search.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="mrp.mrp_product_product_search_view" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='categ_id']" position="after">
                <filter
                    string="CategorÃ­a Madre"
                    name="group_by_parent_category_id"
                    context="{'group_by': 'parent_category_id'}"
                />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_product_mrp_view_form">
        <field name="name">product_product_mrp_view.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="mrp_account.product_product_view_form_normal_inherit_extended" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_bom_cost']" position="attributes">
                <attribute name="groups">real.res_groups_can_see_button_button_bom_cost_in_product</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_product_mrp2_view_form">
        <field name="name">product_product_mrp_view.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="mrp_account.product_variant_easy_edit_view_bom_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_bom_cost']" position="attributes">
                <attribute name="groups">real.res_groups_can_see_button_button_bom_cost_in_product</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_template_mrp_view_form">
        <field name="name">product_template_mrp_view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="mrp_account.product_product_ext_form_view2" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_bom_cost']" position="attributes">
                <attribute name="groups">real.res_groups_can_see_button_button_bom_cost_in_product</attribute>
            </xpath>
        </field>
    </record>
</odoo>
