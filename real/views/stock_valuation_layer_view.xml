<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<record model="ir.ui.view" id="view_stock_valuation_layer_tree">
        <field name="name">stock.valuation.layer.tree</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="parent_category_id" />
                <field name="location_dest_id" optional="show" />
                <field name="accounting_date" optional="hide" />
                <field name="picking_type_id" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='uom_id']" position="after">
                <field name="tons_display" string="Toneladas" sum="Total Toneladas" />
            </xpath>
        </field>
    </record>
</odoo>
