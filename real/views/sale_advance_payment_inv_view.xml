<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="real_sale_advance_payment_inv_view" model="ir.ui.view">
        <field name="name">real.sale.advance.payment.inv.view</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='advance_payment_method']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="required">0</attribute>
            </xpath>
            <xpath expr="//field[@name='count']" position="before">
                <field name="has_pending_sample" invisible="1" />
                <h style="color:red; font-weight:bold;" invisible="not has_pending_sample">
                    This customer has a sample pending.
                </h>
            </xpath>
        </field>
    </record>
</odoo>
