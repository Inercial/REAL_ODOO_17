<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="mrp_request_tree">
        <field name="name">mrp_request.tree</field>
        <field name="model">mrp.request</field>
        <field name="inherit_id" ref="mrp_request.view_mrp_request_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pending_qty']" position="after">
                <field name="available_qty" />
                <field name="qty_in_production" />
                <field name="local" string="Local orders" />
                <field name="foreigner" string="Foreign orders" />
                <field name="product_max_qty" />
                <field name="product_min_qty" optional="show" />
                <field name="qty_to_max" />
                <field name="forecasted_qty" />
                <field name="qty_multiple" optional="hide" />
                <field name="qty_ordered" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="parent_category_id" />
            </xpath>
            <xpath expr="//field[@name='requested_by']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='assigned_to']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='pending_qty']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='date_start']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='origin']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="after">
                <button name="button_approved" invisible="state != 'to_approve'" string="Approve" type="object" />
                <!-- was hidden at the request of the client task#16002 -->
                <!-- <button name="button_cancel" states="to_approve" string="Refuse" type="object"/> -->
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="multi_edit">1</attribute>
            </xpath>
            <!-- was hidden at the request of the client task#16002 -->
            <!-- <xpath expr="//field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{
                    'readonly': [
                        ('state', 'in', ['approved', 'done', 'cancel']),
                    ]}</attribute>
            </xpath> -->
            <xpath expr="//field[@name='product_qty']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="mrp_request_form">
        <field name="name">mrp_request.form</field>
        <field name="model">mrp.request</field>
        <field name="inherit_id" ref="mrp_request.view_mrp_request_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="parent_category_id" />
            </xpath>
        </field>
    </record>
</odoo>
