<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="only_view_confirmed_sales_rule" model="ir.rule">
        <field name="name">Only View Confirmed Sales</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="domain_force">[('state','in',('sale','done'))]</field>
        <field name="groups" eval="[(4, ref('real.res_groups_only_view_confirmed_sales'))]" />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="0" />
        <field name="perm_create" eval="0" />
        <field name="perm_unlink" eval="0" />
    </record>
    <record id="sale.sale_order_personal_rule" model="ir.rule">
        <field name="active" eval="0" />
    </record>
    <record id="calendar.calendar_event_rule_employee" model="ir.rule">
        <field name="domain_force">[('partner_ids','in',user.partner_id.id)]</field>
    </record>
    <function model="ir.rule" name="write">
        <value model="ir.rule" eval="obj().env.ref('base.res_partner_rule').ids" />
        <value eval="{
            'active': False,
        }" />
    </function>

</odoo>
