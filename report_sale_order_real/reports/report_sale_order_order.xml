<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_saleorder_document_base" inherit_id="sale.report_saleorder_document" primary="True" />

    <template
        id="report_sale_order_order_title"
        inherit_id="report_sale_order_real.report_saleorder_document_base"
        priority="1000"
    >
        <xpath expr="//h2" position="replace">
            <h2 class="text-center mt-0 mb-5">Sale Order</h2>
            <h5 class="text-end mt-0 mb-0">L-001</h5>
        </xpath>
        <xpath expr="//th[@name='th_description']" position="after">
            <th name="th_sat_code" class="text-start">SAT Code</th>
        </xpath>
        <xpath expr="//td[@name='td_name']" position="after">
            <td name="td_sat_code" class="text-end">
                <span t-field="line.product_id.unspsc_code_id.code" />
            </td>
        </xpath>
        <xpath expr="//th[@name='th_taxes']" position="replace" />
        <xpath expr="//td[@name='td_taxes']" position="replace" />
    </template>


    <template id="report_saleorder_raw">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="report_sale_order_real.report_sale_order_order_title" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>

    <template id="report_saleorder">
        <t t-call="report_sale_order_real.report_saleorder_raw" />
    </template>

</odoo>
