<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form_rectified_invoices_real" model="ir.ui.view">
        <field name="name">view_move_form_rectified_invoices_real</field>
        <field name="model">account.move</field>
        <field name="priority">1500</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="rectified_invoices" string="Rectified Invoices" invisible="move_type != 'out_refund'" />
            </xpath>
        </field>
    </record>
</odoo>
